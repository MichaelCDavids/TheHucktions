
{{> header.handlebars}}

<div class="jumbotron jumbotron-fluid" style="">
    <div class="container">
    {{#with player}}
        <div class="row">
            <div class="col-sm"> </div>
            <div class="col-sm">

                <div class="card" style="width: 40rem;">
                    <div class="card-header">
                        Updating {{firstName}} {{lastName}} details:
                    </div>
                    <div class="card-body">
                        <form method="post" action="/edit/{{id}}">
                            <div class="row">
                                <div class="col">
                                    <label for="name">Name</label>
                                    <input type="text" class="form-control" name="name" placeholder="name" value="{{firstName}}">
                                </div>
                                <div class="col">
                                    <label for="surname">Surname</label>
                                    <input type="text" class="form-control" name="surname" placeholder="surname" value="{{lastName}}">
                                </div>
                            </div> <br>

                            <div class="row">
                                <div class="col">
                                    <label for="email">Email</label>
                                    <input type="email" class="form-control" name="email" placeholder="email" value="{{email}}">
                                </div>
                                <div class="col">
                                    <label for="age">Age</label>
                                    <input type="text" class="form-control" name="age" placeholder="age" value="{{age}}">
                                </div>
                            </div><br>

                            <div class="row">
                                <div class="col">
                                    <label for="weight">Weight</label>
                                    <input type="text" class="form-control" name="weight" placeholder="weight" value="{{weight}}">
                                </div>

                                <div class="col">
                                    <label for="age">Height</label>
                                    <input type="text" class="form-control" name="height" placeholder="height" value="{{height}}">
                                </div>
                            </div> <br>
                            <div class="row">
                                <div class="col">
                                    <label for="weight">Red cards</label>
                                    <div class="form-group">
                                        <select class="form-control" name="redCards">
                                            <option>0</option>
                                            <option>1</option>
                                            <option>2</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col">
                                    <label for="age">Yellow cards</label>
                                    <div class="form-group">
                                        <select class="form-control" name="yellowCards">
                                            <option>0</option>
                                            <option>1</option>
                                            <option>2</option>
                                        </select>
                                    </div>
                                </div>
                            </div> <br>

                            <div class="row">
                                <div class="col">
                                    <div class="form-group">
                                        <label for="position">Position</label>
                                        <div class="form-group">
                                            <select class="form-control" name="position">
                                                <option>GK</option>
                                                <option>DF</option>
                                                <option>MF</option>
                                                <option>FWD</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="col">
                                    <label for="weight">Goals</label>
                                    <input type="text" class="form-control" name="weight" placeholder="goals">
                                </div>
                            </div> <br>

                            <button type="submit" class="btn btn-primary mr-3">Update</button>
                            <button type="button" class="btn btn-danger">delete</button>

                        </form>
                    </div>
                </div>



            </div>
            <div class="col-sm"> </div>
        </div>
    {{/with}}
    </div>
</div>